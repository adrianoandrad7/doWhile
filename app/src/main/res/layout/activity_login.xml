<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/backgraud_principal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="250dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/classeCadSpinner"
            style="@style/spiner" />

    </LinearLayout>

    <ImageView
       style="@style/imagem_principal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login"
            style="@style/Edit_text_login" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/senha"
            style="@style/Edit_text_senha" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonEntrar"
            style="@style/btnEntrar" />

    </LinearLayout>

    <ImageView
        style="@style/imagem_logo" />

</androidx.appcompat.widget.LinearLayoutCompat>