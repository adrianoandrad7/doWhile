<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/backgraud_secundario">

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_ifmg3"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDirMarcacao"
            style="@style/btn_tela_dois"
            android:text = "@string/marcar"
            app:drawableRightCompat="@drawable/ico_relogio"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDirCorrecao"
            style="@style/btn_tela_dois"
            android:text = "@string/corrigir"
            app:drawableRightCompat="@drawable/ico_edita" />

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>