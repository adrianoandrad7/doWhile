<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="spiner" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:entries">@array/opcao</item>

    </style>

    <style name="imagem_principal" >
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/img_ifmg3</item>

    </style>

    <style name="Edit_text_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/backgraud_edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:hint">email</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:drawableRight">@drawable/ico_email</item>
        <item name="android:maxLength">40</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Edit_text_senha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/backgraud_edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:hint">senha</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:drawableRight">@drawable/ico_olho</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="btnEntrar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/backgraud_btn</item>
        <item name="android:padding">15dp</item>
        <item name="android:text">@string/entrar</item>
        <item name="android:textSize">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imagem_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/img_logo</item>
    </style>

    <style name="titulo_tela_dois">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/titulo2</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">40dp</item>

    </style>

    <style name="btn_tela_dois">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/backgraud_btn2</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textViewMural">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:text">@string/mural</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="imagem_logo_if">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:src">@drawable/img_ifmg</item>
    </style>

    <style name="maps">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="relogio">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/relogio</item>
        <item name="android:textSize">60dp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="ultMarc">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/backgraund_ult_marc</item>


    </style>

    <style name="textMarc">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/ultMarc</item>

    </style>

    <style name="btn_eft_marc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/backgraud_btn3</item>
        <item name="android:padding">15dp</item>
        <item name="android:text">@string/eft_marc</item>
        <item name="android:textSize">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="localizacao">
        <item name="android:src">@drawable/location</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="text_localizacao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:text">@string/title_localizacao</item>
    </style>


</resources>